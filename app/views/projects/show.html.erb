<div class="d-flex align-items-center justify-content-between">
  <h1><%= @project.title %></h1>
  <div>
    <%= link_to 'Edit', edit_project_path(@project), class:"btn btn-secondary" %>
    <%= link_to 'Add Task', new_project_assignment_path(@project), class:"btn btn-primary" %>
  </div>
</div>
<hr/>
<div class="mt-3">
  <b>Status:</b>
  <span class="badge rounded-pill text-bg-primary mx-3" style="color:white"><%= @project.status %></span>
</div>
<div class="mt-3">
  <b>Lead by:</b>
  <span><%= @project.team_lead %></span>
</div>
<div class="card mt-3">
  <div class="card-body" style="background-color:#DFDFDF">
    <p> <%= @project.description%> </p>
  </div>
</div>
<div class="mt-4">
  <h4>Project Report:</h4>
  <div class="container mt-2" >
    <%= render @project.assignments %>
  </div>
</div>
